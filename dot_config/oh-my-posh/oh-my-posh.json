{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#A0D2DB",
          "properties": {
            "style": "full",
            "home_icon": "~",
            "folder_separator_icon": "/"
          },
          "template": "{{ .Path }}"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#7D70BA",
          "properties": {
            "branch_icon": " \ue0a0 "
          },
          "template": "{{ .HEAD }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#A0D2DB",
          "properties": {
            "style": "austin",
            "threshold": 0
          },
          "template": "{{.FormattedMs}} Â· "
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#A0D2DB",
          "properties": {
            "time_format": "15:04:05"
          },
          "template": "{{.CurrentDate | date .Format}}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#84E296",
          "foreground_templates": [
            "{{if gt .Code 0}}#ff3030{{end}}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": "\u276f"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 3
}

